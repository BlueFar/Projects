<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

        <ImageView
            android:id="@+id/logo_home"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:src="@drawable/google_logo" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/logo_cart"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:layout_gravity="end"
                    android:src="@drawable/cart_grey_24dp" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="bottom"
                android:src="@drawable/location_grey_24dp">
            </ImageView>

            <TextView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:paddingTop="18dp"
                android:text="Location"
                android:textColor="@color/hint" >

            </TextView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:paddingTop="10dp"
                android:src="@drawable/arrow_down_grey_24dp">

            </ImageView>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_bar_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/top_bar"
        android:orientation="vertical"
        android:background="@color/bottomnavcolor">

    </LinearLayout>

    //next up the image section

    <LinearLayout
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/top_bar_line">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:background="#ffffff">

            <Button
                android:id="@+id/image_changer_button1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="150dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/image_changer_design"
                android:layout_gravity="bottom|center_horizontal">

            </Button>

            <Button
                android:id="@+id/image_changer_button2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/image_changer_design"
                android:layout_gravity="bottom|center_vertical">

            </Button>

            <Button
                android:id="@+id/image_changer_button3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/image_changer_design"
                android:layout_gravity="bottom|center_vertical">

            </Button>



        </LinearLayout>

    </LinearLayout>

    // next up is the option section


    <TextView
        android:id="@+id/option_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="15dp"
        android:text="What would you like to do"
        android:textColor="#000000"
        android:layout_below="@id/add">

    </TextView>


    <LinearLayout
        android:id="@+id/option_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:layout_below="@+id/option_text"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/option_line"
                    android:layout_width="2dp"
                    android:layout_height="60dp"
                    android:background="@drawable/go_button_2"
                    android:orientation="vertical">

                </LinearLayout>

                <ImageView
                    android:id="@+id/option_one_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/google_logo"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    >

                </ImageView>

                <TextView
                    android:id="@+id/option_one_text"
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingTop="23dp"
                    android:text="Register your device"
                    android:textAlignment="center"
                    android:textColor="#2c3e50"
                    android:textStyle="bold">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <ImageView
                    android:id="@+id/option_one_arrow"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:src="@drawable/arrow_right_grey_24dp">

                </ImageView>

            </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/option_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:layout_below="@+id/option_one"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/option_line2"
                    android:layout_width="2dp"
                    android:layout_height="60dp"
                    android:background="@color/hint"
                    android:orientation="vertical">

                </LinearLayout>

                <ImageView
                    android:id="@+id/option_two_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_local_mall_24px"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    >

                </ImageView>

                <TextView
                    android:id="@+id/option_two_text"
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingTop="23dp"
                    android:text="Marketplace"
                    android:textAlignment="center"
                    android:textColor="#2c3e50"
                    android:textStyle="bold">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <ImageView
                    android:id="@+id/option_two_arrow"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:src="@drawable/arrow_right_grey_24dp">

                </ImageView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/option_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:layout_below="@+id/option_two"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/option_line3"
                    android:layout_width="2dp"
                    android:layout_height="60dp"
                    android:background="#F14C38"
                    android:orientation="vertical">

                </LinearLayout>

                <ImageView
                    android:id="@+id/option_three_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_find_in_page_24px"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    >

                </ImageView>

                <TextView
                    android:id="@+id/option_three_text"
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:paddingTop="23dp"
                    android:text="Track/File a lost device"
                    android:textAlignment="center"
                    android:textColor="#2c3e50"
                    android:textStyle="bold">

                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">



                <ImageView
                    android:id="@+id/option_three_arrow"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:src="@drawable/arrow_right_grey_24dp">

                </ImageView>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>