<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FilterPricePage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/price_back_button"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_gravity="center|start"
                android:src="@drawable/arrow_back_red_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"
                android:text="Price"
                android:textColor="@color/blue"
                android:textSize="20sp"
                >

            </TextView>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_bar_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical"
        android:background="@color/bottomnavcolor">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimary">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/filter_box"
        android:layout_gravity="center"
        android:orientation="vertical">



        <TextView
            android:id="@+id/price_filter_all_prices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingTop="13dp"
            android:text="All Prices"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="18sp">

        </TextView>


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/filter_box"
            android:layout_gravity="center"
            android:orientation="vertical">



            <TextView
                android:id="@+id/price_filter_under_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingTop="13dp"
                android:text="Under ₹5,000"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="18sp">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/filter_box"
            android:layout_gravity="center"
            android:orientation="vertical">



            <TextView
                android:id="@+id/price_filter_5_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingTop="13dp"
                android:text="₹5,000 - ₹10,000"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="18sp">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/filter_box"
            android:layout_gravity="center"
            android:orientation="vertical">



            <TextView
                android:id="@+id/price_filter_10_20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingTop="13dp"
                android:text="₹10,000 - ₹20,000"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="18sp">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/filter_box"
            android:layout_gravity="center"
            android:orientation="vertical">



            <TextView
                android:id="@+id/price_filter_over_20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingTop="13dp"
                android:text="Over ₹20,000"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="18sp">

            </TextView>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>