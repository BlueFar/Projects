<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_my_orders"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/whishlist"
        >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/my_orders_image1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="10dp"
        android:scaleType="centerCrop">

    </ImageView>

</LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_orders_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Product name"
                android:textSize="12sp"
                android:textColor="#000000"
                android:layout_gravity="left"
                android:paddingRight="5dp"
                >

            </TextView>

            <TextView
                android:id="@+id/my_orders_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Status :"
                android:textSize="12sp"
                android:textColor="@color/hint"
                android:padding="5dp">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/item_delete"
                android:layout_width="50dp"
                android:layout_height="120dp"
                android:layout_marginRight="20dp"
                android:src="@drawable/arrow_right_blue_24dp"
                android:layout_gravity="end"
                >
            </ImageView>
        </LinearLayout>

        <TextView
            android:id="@+id/my_orders_item_image1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible">

        </TextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>