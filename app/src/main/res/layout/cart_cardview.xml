<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_cart"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#ffffff"
        >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_image1_id"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:scaleType="centerCrop">

    </ImageView>

</LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_name_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Product name"
                android:textSize="13sp"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:padding="10dp"
                >

            </TextView>

            <TextView
                android:id="@+id/item_price_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â‚¹ 8000"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:padding="10dp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_status_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Status: Awaiting owner to accept the offer"
                    android:textSize="10sp"
                    android:textColor="@color/hint"
                    android:padding="10dp">

                </TextView>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/call_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/call_green_24dp"
                    android:paddingRight="10dp"
                    android:visibility="gone"
                    >

                </com.google.android.material.floatingactionbutton.FloatingActionButton>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Update_offer_button"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Update offer"
                    android:textColor="@color/red"
                    android:textSize="10sp"
                    android:background="@drawable/cart_button"
                    >

                </Button>

                <Button
                    android:id="@+id/Proceed_button"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Proceed"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/red"
                    android:textSize="10sp"
                    android:background="@drawable/cart_button"
                    android:visibility="gone"
                    >

                </Button>

            </LinearLayout>




        </LinearLayout>


        <TextView
            android:id="@+id/item_condition_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible">

        </TextView>

        <TextView
            android:id="@+id/item_description_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible">

        </TextView>

        <TextView
            android:id="@+id/item_product_id"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible">

        </TextView>

        <TextView
            android:id="@+id/item_owner_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible">

        </TextView>

        <TextView
            android:id="@+id/item_image1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible">

        </TextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>