<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".SignupPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">


    //Line 1
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    </LinearLayout>

    //Line 2
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_width="match_parent">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="top"
            app:srcCompat="@drawable/googleg_standard_color_18" />
    </LinearLayout>

    //Line 3
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            //start

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/login_button"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorPrimary"
                                    android:text="Login"
                                    android:textColor="@color/hint">

                                </Button>



                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">



                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal">

                                        <LinearLayout
                                            android:layout_width="1dp"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal"
                                            android:layout_weight="1">

                                            <View
                                                android:layout_width="1dp"
                                                android:layout_height="match_parent"
                                                android:background="#144955"
                                                >

                                            </View>



                                        </LinearLayout>


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:orientation="horizontal"
                                            android:layout_weight="1">

                                            <Button
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="@color/colorPrimary"
                                                android:text="Sign Up"
                                                android:textSize="16sp"
                                                android:textStyle="bold"
                                                android:textColor="#F14C38">
                                            </Button>

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">



                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:text="Name"
            android:textColor="@color/hint"></TextView>

        <EditText
            android:id="@+id/signup_name"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:background="@drawable/edit_text_login"

            android:maxLength="28"
            android:paddingLeft="20dp"

            android:shadowColor="@color/hint"
            android:textColorLink="#00000000"
            android:textCursorDrawable="@color/hint"
            android:textStyle="normal"></EditText>

        <View
            android:layout_width="266dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"
            android:background="@color/hint"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:text="Email ID"
            android:textColor="@color/hint"></TextView>

        <EditText
            android:id="@+id/signup_email"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text_login"

            android:maxLength="28"
            android:paddingLeft="20dp"

            android:shadowColor="@color/hint"
            android:textColorLink="#00000000"
            android:textCursorDrawable="@color/hint"
            android:textStyle="normal"></EditText>

        <View
            android:layout_width="266dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"
            android:background="@color/hint"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:text="Password"
            android:textColor="@color/hint"></TextView>

        <EditText
            android:id="@+id/signup_password"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_login"

            android:maxLength="28"
            android:paddingLeft="20dp"

            android:shadowColor="@color/hint"
            android:textColorLink="#00000000"
            android:textCursorDrawable="@color/hint"
            android:textStyle="normal"></EditText>

        <View
            android:layout_width="266dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"
            android:background="@color/hint"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:text="Confirm Password"
            android:textColor="@color/hint"></TextView>

        <EditText
            android:id="@+id/signup_confirm_password"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_login"

            android:maxLength="28"
            android:paddingLeft="20dp"

            android:shadowColor="@color/hint"
            android:textColorLink="#00000000"
            android:textCursorDrawable="@color/hint"
            android:textStyle="normal"></EditText>

        <View
            android:layout_width="266dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_marginBottom="6dp"
            android:background="@color/hint"></View>


        <Button
            android:id="@+id/signup"
            android:layout_width="300dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/go_button_2"
            android:maxLength="28"

            android:shadowColor="@color/hint"
            android:text="Signup"
            android:textSize="30sp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textColorLink="#00000000"
            android:textCursorDrawable="@color/hint"
            android:textStyle="normal"></Button>





    //Line 4


    //Line 5


    //Line 6


    </LinearLayout>

</LinearLayout>




