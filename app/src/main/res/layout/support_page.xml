<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SupportPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/support_back_button"
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:layout_gravity="center|start"
            android:src="@drawable/arrow_back_red_24dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:background="@color/blue">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/chat_white40dp"
                    android:layout_margin="20dp">

                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="Raise a ticket"
                    android:textColor="@color/bottomnavcolor"
                    android:textSize="18sp">

                </TextView>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="14sp">

            </TextView>

            <EditText
                android:id="@+id/support_name_box"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/support_box"
                android:padding="6dp"
                android:inputType="textPersonName"
                android:maxLength="25"
                android:textCursorDrawable="@color/red"
                android:theme="@style/MyEditText">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:textColor="#000000"
                android:textSize="14sp">

            </TextView>

            <EditText
                android:id="@+id/support_email_box"
                android:theme="@style/MyEditText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="6dp"
                android:background="@drawable/support_box"
                android:inputType="textEmailAddress"
                android:maxLength="30"
                android:textCursorDrawable="@color/red">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Message"
                android:textColor="#000000"
                android:textSize="14sp">

            </TextView>

            <EditText
                android:id="@+id/support_message_box"
                android:theme="@style/MyEditText"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="top"
                android:padding="4dp"
                android:lines="6"
                android:background="@drawable/support_box"
                android:inputType="textMultiLine"
                android:maxLength="139"
                android:textCursorDrawable="@color/red">

            </EditText>
        </LinearLayout>

       <com.google.android.material.floatingactionbutton.FloatingActionButton
           android:id="@+id/support_submit_button"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:layout_gravity="end"
           android:src="@drawable/arrow_forward_blue_24dp"
           android:backgroundTint="@color/bottomnavcolor">

       </com.google.android.material.floatingactionbutton.FloatingActionButton>

    </LinearLayout>

</LinearLayout>
