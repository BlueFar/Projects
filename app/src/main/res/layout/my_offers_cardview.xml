<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_myoffers"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="4dp"
    android:background="@color/colorPrimary"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
                android:background="@drawable/filter_box"
            android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/call_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/call_green_24dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginLeft="15dp">

                        </ImageView>

                        <TextView
                            android:id="@+id/bidder_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="15dp"
                            android:paddingTop="13dp"
                            android:text="Bidder name"
                            android:textAlignment="textStart"
                            android:textColor="#000000"
                            android:textSize="18sp">

                        </TextView>

                        <TextView
                            android:id="@+id/offer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="15dp"
                            android:paddingTop="13dp"
                            android:text="â‚¹ 8000"
                            android:textAlignment="textStart"
                            android:textColor="#000000"
                            android:textSize="18sp">

                        </TextView>

                        <Button
                            android:id="@+id/accept_button"
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:text="Accept"
                            android:layout_gravity="center"
                            android:textColor="#ffffff"
                            android:textSize="10sp"
                            android:background="@drawable/my_offers_button"
                        android:layout_marginLeft="15dp"
                            android:visibility="visible"
                            >
                        </Button>

                        <Button
                            android:id="@+id/dummy_button"
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:text="Accept"
                            android:layout_gravity="center"
                            android:textColor="#ffffff"
                            android:textSize="10sp"
                            android:background="@drawable/my_offers_button"
                            android:layout_marginLeft="15dp"
                            android:visibility="gone"
                            >

                        </Button>

                        <Button
                            android:id="@+id/reject_button"
                            android:layout_width="70dp"
                            android:layout_height="35dp"
                            android:text="Reject"
                            android:textColor="#ffffff"
                            android:textSize="10sp"
                            android:layout_gravity="center"
                            android:background="@drawable/my_offers_button2"
                            android:visibility="visible"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            >

                        </Button>

                </LinearLayout>






        </LinearLayout>


</androidx.cardview.widget.CardView>